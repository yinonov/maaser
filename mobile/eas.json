{
  "cli": {
    "version": ">= 7.0.0"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "channel": "development",
      "ios": {
        "simulator": true,
        "bundleIdentifier": "org.hamaaser.app.dev"
      },
      "android": {
        "buildType": "apk",
        "applicationId": "org.hamaaser.app.dev"
      },
      "env": {
        "APP_ENV": "development"
      }
    },
    "staging": {
      "distribution": "internal",
      "channel": "staging",
      "ios": {
        "simulator": false,
        "bundleIdentifier": "org.hamaaser.app.staging",
        "buildConfiguration": "Release"
      },
      "android": {
        "buildType": "apk",
        "applicationId": "org.hamaaser.app.staging"
      },
      "env": {
        "APP_ENV": "staging"
      }
    },
    "production": {
      "distribution": "store",
      "channel": "production",
      "ios": {
        "simulator": false,
        "bundleIdentifier": "org.hamaaser.app",
        "buildConfiguration": "Release"
      },
      "android": {
        "buildType": "aab",
        "applicationId": "org.hamaaser.app"
      },
      "env": {
        "APP_ENV": "production"
      }
    }
  },
  "submit": {
    "staging": {
      "ios": {
        "appleId": "your-apple-id@example.com",
        "ascAppId": "REPLACE_WITH_APP_STORE_CONNECT_APP_ID",
        "appleTeamId": "REPLACE_WITH_TEAM_ID"
      },
      "android": {
        "track": "internal"
      }
    },
    "production": {
      "ios": {
        "appleId": "your-apple-id@example.com",
        "ascAppId": "REPLACE_WITH_APP_STORE_CONNECT_APP_ID",
        "appleTeamId": "REPLACE_WITH_TEAM_ID"
      },
      "android": {
        "serviceAccountKeyPath": "./google-service-account.json",
        "track": "production"
      }
    }
  }
}
