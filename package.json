{
  "name": "hamaaser-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "mobile",
    "dashboard",
    "functions",
    "shared/types"
  ],
  "scripts": {
    "mobile": "cd mobile && npm start",
    "mobile:ios": "cd mobile && npm run ios",
    "mobile:android": "cd mobile && npm run android",
    "dashboard": "cd dashboard && npm run dev",
    "dashboard:build": "cd dashboard && npm run build",
    "dashboard:start": "cd dashboard && npm start",
    "functions": "cd functions && npm run serve",
    "functions:deploy": "cd functions && npm run deploy",
    "functions:build": "cd functions && npm run build",
    "install:all": "npm install && cd mobile && npm install && cd ../dashboard && npm install && cd ../functions && npm install",
    "lint": "cd mobile && npm run lint && cd ../dashboard && npm run lint",
    "test": "echo \"Run tests from individual packages\"",
    "deploy:dev": "./scripts/deploy/deploy-all.sh dev",
    "deploy:staging": "./scripts/deploy/deploy-all.sh staging",
    "deploy:prod": "./scripts/deploy/deploy-all.sh prod",
    "deploy:functions": "./scripts/deploy/deploy-functions.sh",
    "deploy:dashboard": "./scripts/deploy/deploy-dashboard.sh",
    "deploy:mobile": "./scripts/deploy/deploy-mobile.sh",
    "rollback:staging": "./scripts/deploy/rollback.sh staging",
    "rollback:prod": "./scripts/deploy/rollback.sh prod",
    "setup:environments": "./scripts/deploy/setup-environments.sh",
    "check:secrets": "./scripts/deploy/check-secrets.sh"
  },
  "description": "HaMaaser MVP - Digital Tithing Platform (Monorepo)",
  "author": "HaMaaser Team",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "eslint": "^9.39.1"
  }
}
